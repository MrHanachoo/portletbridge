<?xml version='1.0' encoding='UTF-8'?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
    version="2.0" id="pbr">
    <namespace>http://jboss.org/portletbridge</namespace>
    <tag>
        <description>Creates a URL that points to the current portlet and triggers a action request with the supplied parameters</description>
        <tag-name>actionURL</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletActionURL</component-type>
            <renderer-type>org.jboss.portletbridge.PortletActionURLRenderer</renderer-type>
        </component>
        <attribute>
            <name>copyCurrentRenderParameters</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>escapeXml</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>name</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>portletMode</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>secure</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>var</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>windowState</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <description>Creates a namespace that will be unique for the current portlet resources</description>
        <tag-name>namespace</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletNamespace</component-type>
            <renderer-type>org.jboss.portletbridge.PortletNamespaceRenderer</renderer-type>
        </component>
    </tag>
    <tag>
        <description>Creates a URL parameter that may be added to an actionURL, renderURL or resourceURL</description>
        <tag-name>param</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletParam</component-type>
        </component>
        <attribute>
            <name>name</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>value</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <description>Defines a property that may be added to an actionURL, renderURL or resourceURL and is equivalent to the API call addProperty()</description>
        <tag-name>property</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletProperty</component-type>
        </component>
        <attribute>
            <name>name</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>value</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <description>Creates a URL that points to the current portlet and triggers a render request with the supplied parameters</description>
        <tag-name>renderURL</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletRenderURL</component-type>
            <renderer-type>org.jboss.portletbridge.PortletRenderURLRenderer</renderer-type>
        </component>
        <attribute>
            <name>copyCurrentRenderParameters</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>escapeXml</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>portletMode</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>secure</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>var</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>windowState</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <description>Creates a URL that points to the current portlet and triggers a resource request with the supplied
            parameters</description>
        <tag-name>resourceURL</tag-name>
        <component>
            <component-type>org.jboss.portletbridge.PortletResourceURL</component-type>
            <renderer-type>org.jboss.portletbridge.PortletResourceURLRenderer</renderer-type>
        </component>
        <attribute>
            <name>cacheability</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>escapeXml</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>id</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>secure</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>var</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
</facelet-taglib>