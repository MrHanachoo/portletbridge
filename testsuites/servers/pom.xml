<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.jboss.portletbridge.integration</groupId>
        <artifactId>testsuites-parent</artifactId>
        <version>3.3.0.Final-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>testsuites-servers</artifactId>
    <packaging>pom</packaging>
    <name>Portlet Bridge - test servers</name>

    <profiles>
        <profile>
            <id>full-testsuite</id>
            <modules>
                <module>jetty8</module>
                <module>jboss7</module>
                <module>wildfly8</module>
            </modules>
        </profile>

        <profile>
            <id>jsf21</id>
            <properties>
                <version.mojarra2>2.1.24</version.mojarra2>
            </properties>
            <modules>
                <module>jetty8</module>
                <module>jboss7</module>
            </modules>
        </profile>

        <profile>
            <id>jsf22</id>
            <modules>
                <module>jetty8</module>
                <module>wildfly8</module>
            </modules>
        </profile>
    </profiles>

</project>
