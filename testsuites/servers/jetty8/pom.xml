<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.jboss.portletbridge.integration</groupId>
        <artifactId>testsuites-servers</artifactId>
        <version>3.3.0.Final-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>pbr-test-jetty8</artifactId>
    <packaging>jar</packaging>
    <name>Portlet Bridge - Pluto Embedded test on Jetty8</name>

    <dependencies>
        <!-- Pluto with Jetty -->
        <dependency>
            <groupId>org.jboss.portletbridge.testing.pluto</groupId>
            <artifactId>pluto-jetty-bom</artifactId>
            <type>pom</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.portletbridge.testing.pluto</groupId>
            <artifactId>pluto-extension-jsf</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Portlet Bridge -->
        <dependency>
            <groupId>org.jboss.portletbridge</groupId>
            <artifactId>jsf2-depchain</artifactId>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <!-- Testsuite common -->
        <dependency>
            <groupId>org.jboss.portletbridge.integration</groupId>
            <artifactId>testsuites-common</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- JSF 2 tests -->
        <dependency>
            <groupId>org.jboss.portletbridge.integration</groupId>
            <artifactId>jsf2-testsuite</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <phase>integration-test</phase>
                        <configuration>
                            <systemProperties>
                                <arquillian.launch>jetty8</arquillian.launch>
                            </systemProperties>
                            <skipTests>false</skipTests>

                            <excludes>
                                <exclude>**/config/*Test.java</exclude>
                                <exclude>**/exception/*Test.java</exclude>
                            </excludes>

                            <!--
                            <argLine>-Djava.util.logging.config.file=${project.build.testOutputDirectory}/logging.properties</argLine>
                             -->
                            <useSystemClassLoader>true</useSystemClassLoader>
                            <useManifestOnlyJar>false</useManifestOnlyJar>

                            <!-- Need to fork always as classloader for Pluto and tests is the same, and we need statics to be reset -->
                            <forkCount>1</forkCount>
                            <reuseForks>false</reuseForks>

                            <dependenciesToScan>
                                <dependency>org.jboss.portletbridge.integration:jsf2-testsuite</dependency>
                            </dependenciesToScan>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
